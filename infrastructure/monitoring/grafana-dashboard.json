{
  "dashboard": {
    "title": "PokerHub Analytics",
    "panels": [
      {
        "type": "timeseries",
        "title": "Hands per minute",
        "datasource": "ClickHouse",
        "targets": [
          {
            "query": "SELECT count() AS hands, toStartOfMinute(timestamp) AS ts FROM hand_start GROUP BY ts ORDER BY ts"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Total Wallet Credits",
        "datasource": "ClickHouse",
        "targets": [
          {
            "query": "SELECT sum(amount) AS credits, toStartOfHour(timestamp) AS ts FROM wallet_credit GROUP BY ts ORDER BY ts"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Request Latency",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.9, sum(rate(http_server_requests_duration_seconds_bucket[5m])) by (le))"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "CPU Usage",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m])"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Error Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_server_requests_errors_total[5m])"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Dropped Frames",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(game_frames_dropped_total[5m])"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Action ACK Latency",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(game_action_ack_latency_ms_bucket{event=\"action\"}[5m])) by (le))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(game_action_ack_latency_ms_bucket{event=\"action\"}[5m])) by (le))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(game_action_ack_latency_ms_bucket{event=\"action\"}[5m])) by (le))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Socket Connect Burn Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "socket_connect_error_budget_burn_rate_1h",
            "legendFormat": "1h"
          },
          {
            "expr": "socket_connect_error_budget_burn_rate_6h",
            "legendFormat": "6h"
          }
        ]
      }
    ]
  }
}
