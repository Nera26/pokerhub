{
  "dashboard": {
    "uid": "socket-connects",
    "title": "Socket Connects",
    "labels": {
      "pagerduty_service": "pokerhub-sre",
      "runbook": "docs/runbooks/socket-connect-success.md"
    },
    "panels": [
      {
        "type": "timeseries",
        "title": "Connect Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(socket_connects_total[5m]))"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Disconnect Rate",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(socket_disconnects_total[5m]))"
          }
        ]
      }
    ]
  }
}
