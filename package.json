{
  "name": "pokerhub",
  "version": "1.0.0",
  "private": true,
  "bin": {
    "verify": "bin/verify"
  },
  "scripts": {
    "build": "tsc -b",
    "prepublishOnly": "npm run build",
    "pull:frontend": "git subtree pull --prefix frontend frontend-remote main --squash",
    "pull:backend": "git subtree pull --prefix backend backend-remote main --squash",
    "pull:all": "npm run pull:frontend && npm run pull:backend",
    "push:frontend": "git subtree push --prefix frontend frontend-remote main",
    "push:backend": "git subtree push --prefix backend backend-remote main",
    "push:all": "npm run push:frontend && npm run push:backend",
    "load:swarm": "mkdir -p load/results && k6 run load/k6-swarm.js --summary-export=load/results/k6-swarm-summary.json",
    "k6:soak": "k6 run infra/tests/load/k6-soak.js",
    "soak:test": "mkdir -p load/results && k6 run load/soak.js --log-format json --summary-export=load/results/soak-summary.json",
    "contracts:generate": "node contracts/generate-types.mjs",
    "test:contracts": "npm test --prefix backend -- \"test/contracts/.*\\.contract\\.spec\\.ts\"",
    "test:load": "npm run load:socket --prefix backend",
    "test:property": "npm run test:property --prefix backend && npm run audit:ledger",
    "test:e2e": "npm run test:e2e --prefix frontend",
    "test:scripts": "npm test --prefix scripts -- test/ensure-workflow-step.spec.ts",
    "test:perf": "npm test --prefix backend -- \"(test|tests)/.*\\.sim\\.spec\\.ts$\"",
    "test:ledger": "npm run audit:ledger --prefix backend",
    "audit:ledger": "npm run audit:ledger --prefix backend",
    "test": "npm run test:scripts && npm test --prefix backend && npm run test:property --prefix backend && npm run audit:ledger && npm test --prefix frontend && npm run test:contracts && npm run test:e2e --prefix frontend",
    "perf:socket-load": "ts-node tests/performance/socket-load.ts",
    "perf:replay": "ts-node tests/performance/replay.ts",
    "docs:lint": "remark docs --frail",
    "docs:check": "node scripts/check-docs-meta.js",
    "lint:unused": "ts-prune -p tsconfig.json -e",
    "lint:dup": "jscpd -g --threshold 10 frontend backend shared",
    "audit:score": "node tools/audit-score.mjs"
  },
  "devDependencies": {
    "@actions/github": "^6.0.1",
    "@google-cloud/dlp": "^5.13.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.205.0",
    "@opentelemetry/exporter-logs-otlp-http": "0.205.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.205.0",
    "@opentelemetry/exporter-prometheus": "0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.205.0",
    "@opentelemetry/instrumentation": "0.205.0",
    "@opentelemetry/resources": "2.1.0",
    "@opentelemetry/sdk-logs": "0.205.0",
    "@opentelemetry/sdk-metrics": "2.1.0",
    "@opentelemetry/sdk-node": "0.205.0",
    "@opentelemetry/semantic-conventions": "1.37.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.18.0",
    "eslint-plugin-unused-imports": "^4.1.2",
    "express": "^4.18.2",
    "fast-check": "^3.23.2",
    "jscpd": "^4.0.5",
    "openapi-fetch": "^0.7.10",
    "openapi-typescript": "^6.7.0",
    "reflect-metadata": "^0.2.2",
    "remark-cli": "^11.0.0",
    "remark-validate-links": "^13.0.2",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "js-sha256": "^0.11.0",
    "zod": "^3.25.76"
  }
}
