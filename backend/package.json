{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "node scripts/clean-dist.js && nest build && node scripts/prepare-dist-entry.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run build && node dist/main.js",
    "start:dev": "node scripts/prepare-dist-entry.js --allow-missing && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:property": "jest --testPathPattern=.property.spec.ts$",
    "audit:ledger": "node scripts/audit-ledger.js && ts-node scripts/replay-ledger.ts",
    "test:contracts": "jest --testPathPatterns=.contract.spec.ts$",
    "fixtures:icm": "ts-node --transpile-only test/fixtures/icm/generate.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts src/database/migrations/$npm_config_name",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/database/migrations/$npm_config_name",
    "rebuild:leaderboard": "ts-node src/leaderboard/rebuild.ts --days=30 --assert-duration=1800000",
    "load:socket": "ts-node test/load/socket-load.ts",
    "test:soak": "node --trace-gc -r ts-node/register -r tsconfig-paths/register test/soak/soak24h.ts",
    "verify:proof": "ts-node ../bin/verify.ts proof"
  },
  "dependencies": {
    "@clickhouse/client": "^1.12.1",
    "@google-cloud/storage": "^7.17.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.6",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/api-logs": "0.205.0",
    "@opentelemetry/exporter-logs-otlp-http": "0.205.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.205.0",
    "@opentelemetry/exporter-prometheus": "0.205.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.205.0",
    "@opentelemetry/instrumentation-amqplib": "0.52.0",
    "@opentelemetry/instrumentation-express": "0.54.0",
    "@opentelemetry/instrumentation-http": "0.205.0",
    "@opentelemetry/instrumentation-ioredis": "0.53.0",
    "@opentelemetry/instrumentation-kafkajs": "0.15.0",
    "@opentelemetry/instrumentation-nestjs-core": "0.51.0",
    "@opentelemetry/instrumentation-pg": "0.58.0",
    "@opentelemetry/instrumentation-pino": "0.52.0",
    "@opentelemetry/instrumentation-runtime-node": "0.19.0",
    "@opentelemetry/instrumentation-socket.io": "0.52.0",
    "@opentelemetry/sdk-logs": "0.205.0",
    "@opentelemetry/sdk-metrics": "2.1.0",
    "@opentelemetry/sdk-node": "0.205.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "amqplib": "^0.10.9",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.58.5",
    "cache-manager": "^7.2.0",
    "cache-manager-ioredis": "^2.1.0",
    "cookie-parser": "^1.4.7",
    "geoip-lite": "^1.4.10",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "ioredis-mock": "^8.12.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "js-sha256": "^0.11.0",
    "kafkajs": "^2.2.4",
    "nestjs-pino": "^4.4.0",
    "onfido": "^4.3.0",
    "p-queue": "^8.1.0",
    "parquetjs-lite": "^0.8.1",
    "pg": "^8.16.3",
    "pg-mem": "^3.0.5",
    "pino-http": "^10.5.0",
    "pokerhub": "file:..",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.26",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/geoip-lite": "^1.4.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "express": "^4.18.2",
    "fast-check": "3.23.2",
    "glicko2": "^1.2.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.4.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.0.0",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "zod-fast-check": "^0.10.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/test/.*\\.e2e-spec\\.ts$"
    ],
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/../shared/$1"
    },
    "modulePaths": [
      "<rootDir>/node_modules"
    ]
  }
}
