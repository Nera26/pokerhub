# JSON mapping of stake to rake percent and cap
# Example: {"1-2":{"percent":0.05,"cap":1},"5-10":{"percent":0.05,"cap":10}}
RAKE_CONFIG={"1-2":{"percent":0.05,"cap":1}}

# Default chart palette (comma-separated hex colors)
DEFAULT_CHART_PALETTE=#ff4d4f,#facc15,#3b82f6,#22c55e

# Comma-separated list of system account names
SYSTEM_ACCOUNTS=reserve,house,rake,prize

# Number of hands before a rebalanced player can move again
TOURNAMENT_AVOID_WITHIN=10

# Payment provider configuration
PAYMENT_PROVIDER_BASE_URL=https://api.stripe.com/v1
DEFAULT_CURRENCY=usd

# Analytics service
KAFKA_BROKERS=kafka:9092
CLICKHOUSE_URL=http://clickhouse:8123
